<!-- Card_Resources.xaml -->
    
    <ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
>

    <!-- 🟢 Card Backgrounds -->
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CreamWhite}"/>
    <SolidColorBrush x:Key="CardHoverBrush" Color="{StaticResource PrimaryWhite}" Opacity=".2"/>
    <SolidColorBrush x:Key="CardBorderBrush" Color="{StaticResource PrimaryMaroon}"/>

    <!-- 🔤 Foreground Colors -->
    <SolidColorBrush x:Key="CardTitleForeground" Color="{StaticResource GrayDark}"/>
    <SolidColorBrush x:Key="CardValueForeground" Color="{StaticResource GrayDark}"/>
    <SolidColorBrush x:Key="CardDescriptionForeground" Color="{StaticResource GrayDark}"/>
    <SolidColorBrush x:Key="CardIconForeground" Color="{StaticResource PrimaryWhite}"/>

    <!-- 📐 Sizes -->
    <CornerRadius x:Key="CardCornerRadius">12</CornerRadius>
    <Thickness x:Key="CardPadding">0</Thickness>
    <Thickness x:Key="CardMargin">10</Thickness>
    <Thickness x:Key="CardDetailsMargin">30 0 0 0</Thickness>

    <!-- 📏 Font Sizes -->
    <sys:Double x:Key="CardIconSize">30</sys:Double>
    <sys:Double x:Key="CardValueSize">35</sys:Double>
    <sys:Double x:Key="CardTitleSize">25</sys:Double>
    <sys:Double x:Key="CardDescriptionSize">18</sys:Double>

    <!-- 🎨 Drop Shadow Effect -->
    <DropShadowEffect x:Key="DropShadow" Color="Gray" ShadowDepth="0.5" Opacity=".2" BlurRadius="5" />

    <!-- 🎨 Default Style for Card -->
    <Style x:Key="StatCardStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}"/>
        <Setter Property="Padding" Value="{StaticResource CardPadding}"/>
        <Setter Property="Margin" Value="{StaticResource CardMargin}"/>
        <Setter Property="Background" Value="{StaticResource BgLight}"/>
        <Setter Property="Effect" Value="{StaticResource DropShadow}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}"/>
        <Setter Property="Padding" Value="{StaticResource CardPadding}"/>
        <Setter Property="Margin" Value="{StaticResource CardMargin}"/>
        <Setter Property="Background" Value="{StaticResource BgLight}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- 🎨 TextBlock Styles -->
    <Style x:Key="CardIconStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource CardIconSize}"/>
        <Setter Property="Foreground" Value="{StaticResource CardIconForeground}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="CardValueStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource CardValueSize}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="{StaticResource CardDetailsMargin}"/>
        <Setter Property="Foreground" Value="{StaticResource CardValueForeground}"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <Style x:Key="CardTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource CardTitleSize}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="{StaticResource CardDetailsMargin}"/>
        <Setter Property="Foreground" Value="{StaticResource CardTitleForeground}"/>
        <Setter Property="TextAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <Style x:Key="CardDescriptionStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource CardDescriptionSize}"/>
        <Setter Property="Foreground" Value="{StaticResource CardDescriptionForeground}"/>
        <Setter Property="TextAlignment" Value="Left"/>
        <Setter Property="Margin" Value="{StaticResource CardDetailsMargin}"/>
    </Style>
</ResourceDictionary>