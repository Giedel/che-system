<!-- Settlement_View.xaml  -->
    
    <Window x:Class="che_system.modals.view.Settlement_View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settle Damage Incident" Height="670" Width="900" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <!-- Added footer row -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <GroupBox Header="Incident Details"
                      FontSize="14"
                      Grid.Column="0"
                      Margin="15"
                      Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 5">
                        <TextBlock Text="Item Name: " FontSize="18" FontWeight="Bold" Foreground="{StaticResource FontDark}"/>
                        <TextBlock Text="{Binding ItemName}" FontSize="18" Margin="10 0 0 0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 5">
                        <TextBlock Text="Quantity: " FontSize="18" FontWeight="Bold" Foreground="{StaticResource FontDark}"/>
                        <TextBlock Text="{Binding SelectedIncident.Quantity}" FontSize="18" Margin="10 0 0 0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 5">
                        <TextBlock Text="Date of Incident: " FontSize="18" FontWeight="Bold" Foreground="{StaticResource FontDark}"/>
                        <TextBlock Text="{Binding SelectedIncident.DateOfIncident, StringFormat={}{0:MM/dd/yyyy}}" FontSize="18" Margin="10 0 0 0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0 5">
                        <TextBlock Text="Group No.: " FontSize="18" FontWeight="Bold" Foreground="{StaticResource FontDark}"/>
                        <TextBlock Text="{Binding GroupNo}" FontSize="18" Margin="10 0 0 0"/>
                    </StackPanel>

                    <DataGrid Grid.Row="4" Height="300"
                              AutoGenerateColumns="False"
                              ItemsSource="{Binding LiableStudents}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*" />
                            <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*" />
                            <DataGridTextColumn Header="ID Number" Binding="{Binding IdNumber}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0 10 0 5">
                        <TextBlock Text="Subject Code: " FontSize="18" FontWeight="Bold" Foreground="{StaticResource FontDark}"/>
                        <TextBlock Text="{Binding SubjectCode}" FontSize="18" Margin="10 0 0 0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="6" Orientation="Horizontal" Margin="0 5">
                        <TextBlock Text="Instructor: " FontSize="18" FontWeight="Bold" Foreground="{StaticResource FontDark}"/>
                        <TextBlock Text="{Binding Instructor}" FontSize="18" Margin="10 0 0 0"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <Grid Grid.Column="1">
                <GroupBox Header="Settlement Details"
                          Grid.Row="0"
                          FontSize="14"
                          Grid.Column="0"
                          Margin="0 15 15 15"
                          Padding="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="0 5">
                            <TextBlock Text="Date Settled: " FontSize="18" FontWeight="Bold" Foreground="{StaticResource FontDark}"/>
                            <DatePicker SelectedDate="{Binding DateSettled}" Width="Auto" FontSize="18" Padding="5 10"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Margin="0 5">
                            <TextBlock Text="Reference No.: " FontSize="18" FontWeight="Bold" Foreground="{StaticResource FontDark}"/>
                            <TextBox Style="{StaticResource InputTextBoxStyle}"
                                     Text="{Binding ReferenceNo}"
                                     FontSize="18"
                                     Width="Auto"
                                     Background="{StaticResource InputBackgroundColor}"
                                     BorderThickness="0" Padding="5 10"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Margin="0 5">
                            <TextBlock Text="Photo Receipt: " FontSize="18" FontWeight="Bold" Foreground="{StaticResource FontDark}"/>
                            <Button Content="Upload" Style="{StaticResource OriginalButtonStyle}" Command="{Binding UploadReceiptCommand}" FontSize="16" />
                            <TextBox Style="{StaticResource InputTextBoxStyle}"
                                     Text="{Binding ReceiptPath}"
                                     Margin="0 5 0 0"
                                     FontSize="18"
                                     Width="400"
                                     Height="270"
                                     Background="{StaticResource InputBackgroundColor}"
                                     BorderThickness="0" Padding="5 10"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- Footer -->
        <Grid Grid.Row="2" Margin="10 0 10 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Delete on the left -->
            <StackPanel Orientation="Horizontal"
                        Grid.Column="0"
                        HorizontalAlignment="Left">
                <Button Style="{DynamicResource OriginalButtonStyle}"
                        Content="Delete"
                        Command="{Binding DeleteSettlementCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Width="110"
                        Background="#C62828"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="0 0 10 0"
                        ToolTip="Delete this settlement record"/>
            </StackPanel>

            <!-- Cancel / Save on the right -->
            <StackPanel Orientation="Horizontal"
                        Grid.Column="1"
                        HorizontalAlignment="Right">
                <Button Style="{DynamicResource OriginalButtonStyle}"
                        Content="Cancel"
                        Command="{Binding CancelCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Width="100"
                        Background="#E0E0E0"
                        Foreground="{StaticResource FontDark}"
                        BorderThickness="0"
                        Margin="0 0 10 0"/>
                <Button Style="{DynamicResource OriginalButtonStyle}"
                        Content="Save"
                        Command="{Binding SaveSettlementCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Width="100"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
