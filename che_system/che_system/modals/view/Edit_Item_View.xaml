<!-- Edit_Item_View.xaml -->
<Window x:Class="che_system.modals.view.Edit_Item_View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Title="Edit Item"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">

    <Border Background="White" CornerRadius="20" Height="650" Width="550">
        <Grid Margin="20" Height="Auto" Width="500">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/> <!-- Added missing row so footer (Row=4) is valid -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" VerticalAlignment="Center" Margin="0 0 0 20">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <fa:IconBlock Icon="PenToSquare" Foreground="{StaticResource FontDark}" Width="30" Height="30" Margin="0 0 10 0"/>
                    <TextBlock Text="Edit Item" Foreground="{StaticResource FontDark}" FontSize="26" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel x:Name="Control_Bar_Panel"
                            Orientation="Horizontal"
                            FlowDirection="RightToLeft"
                            Background="Transparent"
                            Margin="2"
                            MouseLeftButtonDown="Control_Bar_Panel_MouseLeftButtonDown"
                            MouseEnter="Control_Bar_Panel_MouseEnter">
                    <Button x:Name="Close_Button"
                            Command="{Binding Cancel_Command}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                            Style="{StaticResource Control_Button}"
                            Tag="{StaticResource FontDark}">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8BB;" FontSize="15"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Form -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/> <!-- New row for Threshold & Calibration -->
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0 0 0 15">
                    <TextBlock Text="Item Name" FontSize="20"/>
                    <TextBox Text="{Binding Edited_Item.ItemName, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputTextBoxStyle}"
                             FontSize="16"
                             Background="{StaticResource InputBackgroundColor}"
                             BorderThickness="0"
                             Padding="5 10"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="0 0 0 15">
                    <TextBlock Text="Chemical Formula (For chemicals only)" FontSize="20"/>
                    <TextBox Text="{Binding Edited_Item.ChemicalFormula, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputTextBoxStyle}"
                             FontSize="16"
                             Background="{StaticResource InputBackgroundColor}"
                             BorderThickness="0"
                             Padding="5 10"/>
                </StackPanel>

                <Grid Grid.Row="2" Margin="0 0 0 15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width=".05*"/>
                        <ColumnDefinition Width=".40*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Quantity" FontSize="20"/>
                        <TextBox Text="{Binding Edited_Item.Quantity, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputTextBoxStyle}"
                                 FontSize="16"
                                 IsReadOnly="True"
                                 IsHitTestVisible="False"
                                 Background="{StaticResource InputBackgroundColor}"
                                 BorderThickness="0"
                                 Padding="5 10"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Unit" FontSize="20"/>
                        <ComboBox SelectedValue="{Binding Edited_Item.Unit, UpdateSourceTrigger=PropertyChanged}"
                                  SelectedValuePath="Content"
                                  VerticalContentAlignment="Center"
                                  HorizontalContentAlignment="Center"
                                  Background="Transparent"
                                  BorderBrush="{StaticResource BorderPrimary}"
                                  FontSize="16"
                                  Padding="5 12">
                            <ComboBoxItem Content="g" IsSelected="True"/>
                            <ComboBoxItem Content="kg"/>
                            <ComboBoxItem Content="ml"/>
                            <ComboBoxItem Content="L"/>
                            <ComboBoxItem Content="pcs"/>
                            <ComboBoxItem Content="bxs"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="3" Margin="0 0 0 15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width=".05*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Top">
                        <TextBlock Text="Category" FontSize="20"/>
                        <ComboBox SelectedValue="{Binding Edited_Item.Category, UpdateSourceTrigger=PropertyChanged}"
                                  SelectedValuePath="Content"
                                  HorizontalContentAlignment="Center"
                                  VerticalContentAlignment="Center"
                                  Background="Transparent"
                                  BorderBrush="{StaticResource BorderPrimary}"
                                  FontSize="16"
                                  Padding="5 12">
                            <ComboBoxItem Content="Chemical" IsSelected="True"/>
                            <ComboBoxItem Content="Apparatus"/>
                            <ComboBoxItem Content="Supplies"/>
                            <ComboBoxItem Content="Miscellaneous"/>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Location" FontSize="20"/>
                        <TextBox Text="{Binding Edited_Item.Location, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputTextBoxStyle}"
                                 FontSize="16"
                                 Background="{StaticResource InputBackgroundColor}"
                                 BorderThickness="0"
                                 Padding="5 10"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="4" Margin="0 0 0 15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width=".05*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Left">
                        <TextBlock Text="Expiry Date" FontSize="20"/>
                        <DatePicker SelectedDate="{Binding Edited_Item.ExpiryDate, UpdateSourceTrigger=PropertyChanged}"
                                    Focusable="False"
                                    Width="200"
                                    FontSize="16"
                                    Padding="5 10"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" VerticalAlignment="Top">
                        <TextBlock Text="Type" FontSize="20"/>
                        <ComboBox SelectedValue="{Binding Edited_Item.Type, UpdateSourceTrigger=PropertyChanged}"
                                  SelectedValuePath="Content"
                                  HorizontalContentAlignment="Center"
                                  VerticalContentAlignment="Center"
                                  Background="Transparent"
                                  BorderBrush="{StaticResource BorderPrimary}"
                                  FontSize="16"
                                  Padding="5 12">
                            <ComboBoxItem Content="Consumable" IsSelected="True"/>
                            <ComboBoxItem Content="Non-Consumable"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <!-- NEW: Threshold & Calibration -->
                <Grid Grid.Row="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width=".05*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Threshold" FontSize="20"/>
                        <TextBox Text="{Binding Edited_Item.Threshold, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputTextBoxStyle}"
                                 FontSize="16"
                                 Background="{StaticResource InputBackgroundColor}"
                                 BorderThickness="0"
                                 Padding="5 10"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Calibration Date (if any)" FontSize="20"/>
                        <DatePicker SelectedDate="{Binding Edited_Item.CalibrationDate, UpdateSourceTrigger=PropertyChanged}"
                                    Focusable="False"
                                    Width="240"
                                    FontSize="16"
                                    Padding="5 10"/>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- Footer Buttons -->
            <StackPanel Orientation="Horizontal"
                        Grid.Row="4"
                        HorizontalAlignment="Right"
                        Margin="0 10 0 0">
                <Button Style="{DynamicResource OriginalButtonStyle}"
                        Content="Cancel"
                        Command="{Binding Cancel_Command}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Width="100"
                        Background="#E0E0E0"
                        Foreground="{StaticResource FontDark}"
                        BorderThickness="0"
                        Margin="0 0 10 0"/>
                <Button Style="{DynamicResource OriginalButtonStyle}"
                        BorderThickness="0"
                        Content="Save"
                        Command="{Binding Save_Command}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Width="100"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
