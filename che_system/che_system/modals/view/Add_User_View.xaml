<Window x:Class="che_system.modals.view.Add_User_View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:che_system.modals.view"
        xmlns:custom="clr-namespace:che_system.custom_controls"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp" xmlns:view_model="clr-namespace:che_system.modals.view_model" d:DataContext="{d:DesignInstance Type=view_model:Add_User_View_Model}"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="Add_User_View" Width="400">

    <Border Height="680" Background="{StaticResource BgLight}" CornerRadius="15" BorderThickness="1" BorderBrush="Gray">
        <Grid Margin="30 20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" VerticalAlignment="Center" Margin="0 0 0 15">
                <!-- Control Bar -->
                <TextBlock Text="ADD USER" FontSize="20" FontWeight="Bold"/>
                <StackPanel x:Name="Control_Bar_Panel"
                            Orientation="Horizontal"
                            FlowDirection="RightToLeft"
                            Background="Transparent"
                            Margin="2"
                            MouseLeftButtonDown="Control_Bar_Panel_MouseLeftButtonDown"
                            MouseEnter="Control_Bar_Panel_MouseEnter">
                    <Button x:Name="Close_Button"
                            Command="{Binding Cancel_Command}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                            Style="{StaticResource Control_Button}"
                            Tag="{StaticResource FontDark}">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8BB;" FontSize="15"/>
                    </Button>

                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="1" Margin="0 0 0 10">
                <TextBlock Text="First Name" FontSize="18"/>
                <TextBox Text="{Binding FirstName}"
                         Style="{StaticResource InputTextBoxStyle}"
                         FontSize="16"
                         Background="{StaticResource InputBackgroundColor}"
                         BorderThickness="0"
                         Padding="5 10"
                         Effect="{StaticResource DropShadow}"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0 0 0 10">
                <TextBlock Text="Last Name" FontSize="18"/>
                <TextBox Text="{Binding LastName}"
                         Style="{StaticResource InputTextBoxStyle}"
                         FontSize="16"
                         Background="{StaticResource InputBackgroundColor}"
                         BorderThickness="0"
                         Padding="5 10"
                         Effect="{StaticResource DropShadow}"/>
            </StackPanel>

            <Grid Grid.Row="3" Margin="0 0 0 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width=".05*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="ID Number" FontSize="18"/>
                    <TextBox Text="{Binding IdNumber}"
                             Style="{StaticResource InputTextBoxStyle}"
                             FontSize="16"
                             Background="{StaticResource InputBackgroundColor}"
                             BorderThickness="0"
                             Padding="5 10"
                             Effect="{StaticResource DropShadow}"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Birthdate" FontSize="18"/>
                    <DatePicker SelectedDate="{Binding Birthday}"
                                FontSize="16" 
                                Padding="5 10" 
                                Effect="{StaticResource DropShadow}"/>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="4" Margin="0 0 0 10">
                <TextBlock Text="Role" FontSize="18"/>
                <ComboBox ItemsSource="{Binding AvailableRoles}"
                          DisplayMemberPath="DisplayName"
                          SelectedValuePath="Value"
                          SelectedValue="{Binding Role}"
                          VerticalContentAlignment="Center" 
                          HorizontalContentAlignment="Center"
                          Background="Transparent"
                          BorderBrush="{StaticResource BorderPrimary}"
                          FontSize="16"
                          Padding="5 12"
                          Effect="{StaticResource DropShadow}"/>
            </StackPanel>

            <StackPanel Grid.Row="5" Margin="0 0 0 10">
                <TextBlock Text="Username" FontSize="18"/>
                <TextBox Text="{Binding Username}"
                         Style="{StaticResource InputTextBoxStyle}"
                         FontSize="16"
                         Background="{StaticResource InputBackgroundColor}"
                         BorderThickness="0"
                         Padding="5 10"
                         Effect="{StaticResource DropShadow}"/>
            </StackPanel>

            <StackPanel Grid.Row="6" Margin="0 0 0 10">
                <TextBlock Text="Password" FontSize="18"/>
                <custom:Bindable_Password_Box Password="{Binding Password}"
                                              FontSize="10"
                                              Foreground="{StaticResource FontDark}"
                                              Background="{StaticResource InputBackgroundColor}"
                                              BorderThickness="0"
                                              Padding="0"
                                              Effect="{StaticResource DropShadow}"/>
            </StackPanel>

            <StackPanel Grid.Row="7" Margin="0 0 0 30">
                <TextBlock Text="Confirm Password" FontSize="18"/>
                <custom:Bindable_Password_Box Password="{Binding ConfirmPassword}"
                                              FontSize="16"
                                              Foreground="{StaticResource FontDark}"
                                              Background="{StaticResource InputBackgroundColor}"
                                              BorderThickness="0"
                                              Padding="0"
                                              Effect="{StaticResource DropShadow}"/>
            </StackPanel>

            <Grid Grid.Row="8">
                <!-- Footer Buttons -->
                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 10 0 0">
                    <Button Style="{DynamicResource OriginalButtonStyle}"
                    Content="Cancel"
                    Command="{Binding Cancel_Command}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Width="100"
                    Background="#E0E0E0"
                    Foreground="{StaticResource FontDark}"
                    BorderThickness="0"
                    Margin="0 0 10 0"/>
                    <Button Style="{DynamicResource OriginalButtonStyle}"
                    BorderThickness="0"
                    Content="Save"
                    Command="{Binding Save_Command}"
                    Width="100"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
