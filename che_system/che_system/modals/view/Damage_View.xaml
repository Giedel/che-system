<Window x:Class="che_system.modals.view.Damage_View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:che_system.modals.view"
        xmlns:conv="clr-namespace:che_system.converters"
        xmlns:cc="clr-namespace:che_system.custom_controls"
        mc:Ignorable="d"
        Title="Record Damage" 
        Width="1080"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" VerticalAlignment="Center" Margin="0 0 0 15">
            <!-- Control Bar -->
            <TextBlock Text="Record Damage" FontSize="20" FontWeight="Bold"/>
            <StackPanel x:Name="Control_Bar_Panel"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Background="Transparent"
                                Margin="2"
                                MouseLeftButtonDown="Control_Bar_Panel_MouseLeftButtonDown"
                                MouseEnter="Control_Bar_Panel_MouseEnter">
                <Button x:Name="Close_Button"
                                Command="{Binding CancelDamage_Command}"
                                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                                Style="{StaticResource Control_Button}"
                                Tag="{StaticResource FontDark}">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8BB;" FontSize="15"/>
                </Button>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Incident Details -->
                <GroupBox Header="Incident Details"
                          FontSize="14"
                          Grid.Row="0">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Margin="5" Grid.Row="0" Grid.Column="0">
                            <TextBlock Text="Broken Item" FontSize="20"/>
                            <TextBox Text="{Binding ItemName, UpdateSourceTrigger=PropertyChanged}"
                                     conv:AutoCompleteBehavior.ItemsSource="{Binding AvailableItems}"
                                     Style="{StaticResource InputTextBoxStyle}"
                                     FontSize="16"
                                     Width="Auto"
                                     Background="{StaticResource InputBackgroundColor}"
                                     BorderThickness="0"
                                     Padding="5 10"/>
                        </StackPanel>

                        <StackPanel Margin="5" Grid.Row="0" Grid.Column="1">
                            <TextBlock Text="Quantity" FontSize="20"/>
                            <cc:NumericUpDown Value="{Binding Quantity}"
                                              Minimum="1"
                                              Width="Auto"
                                              FontSize="16"
                                              Padding="5 10"/>
                        </StackPanel>

                        <StackPanel Margin="5" Grid.Row="1" Grid.Column="0">
                            <TextBlock Text="Date of Incident" FontSize="20"/>
                            <DatePicker SelectedDate="{Binding DateOfIncident}"
                                        Width="Auto"
                                        FontSize="16"
                                        Padding="5 10"/>
                        </StackPanel>

                        <StackPanel Margin="5" Grid.Row="1" Grid.Column="1">
                            <TextBlock Text="Group" FontSize="20"/>
                            <ComboBox ItemsSource="{Binding AvailableGroups}"
                                      SelectedItem="{Binding SelectedGroup}"
                                      DisplayMemberPath="GroupNo"
                                      IsEditable="True"
                                      Width="Auto"
                                      FontSize="16"
                                      Padding="5 10"
                                      Background="{StaticResource InputBackgroundColor}"
                                      BorderThickness="0"/>
                        </StackPanel>

                        <StackPanel Margin="5" Grid.Row="2" Grid.ColumnSpan="2">
                            <TextBlock Text="Description" FontSize="20"/>
                            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource InputTextBoxStyle}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     FontSize="16"
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Stretch"
                                     Background="{StaticResource InputBackgroundColor}"
                                     BorderThickness="0"
                                     Padding="5 10"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Recorded By -->
                <StackPanel Grid.Row="3" Margin="5">
                    <TextBlock Text="Recorded By" FontSize="20"/>
                    <TextBlock Text="{Binding RecordedBy}" FontSize="16" Margin="5"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Column="1">
                <!-- Liable Students GroupBox -->
                <GroupBox Header="Liable Students" FontSize="14">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                            <Button Content="Add Student" Command="{Binding AddStudentCommand}" Margin="0 0 5 0" Width="100"/>
                            <Button Content="Remove Selected" Command="{Binding RemoveStudentCommand}" Width="100"/>
                        </StackPanel>

                        <DataGrid Grid.Row="1" ItemsSource="{Binding LiableStudents}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  Margin="0 5 0 5">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*"/>
                                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*"/>
                                <DataGridTextColumn Header="ID Number" Binding="{Binding IdNumber}" Width="*"/>
                                <DataGridTemplateColumn Header="Remove">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Command="{Binding Path=DataContext.RemoveStudentCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" CommandParameter="{Binding}" Content="Remove"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>

        <Grid Grid.Row="2">
            <!-- Footer Buttons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0 10 0 0">
                <Button Style="{DynamicResource OriginalButtonStyle}"
                        Content="Cancel"
                        Command="{Binding CancelDamage_Command}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Width="100"
                        Background="#E0E0E0"
                        Foreground="{StaticResource FontDark}"
                        BorderThickness="0"
                        Margin="0 0 10 0"/>
                <Button Style="{DynamicResource OriginalButtonStyle}"
                        Content="Save"
                        Command="{Binding SaveDamage_Command}"
                        Width="100"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
