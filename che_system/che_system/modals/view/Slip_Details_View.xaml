<!-- Slip_Details_View.xaml -->
    
    <Window x:Class="che_system.modals.view.Slip_Details_View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:che_system.converters"
        xmlns:local="clr-namespace:che_system.modals.view"
        mc:Ignorable="d"
        Title="Slip Details" Height="900" Width="850"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <conv:NonConsumableToBoolConverter x:Key="NonConsumableToBoolConverter"/>
    </Window.Resources>
        
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Slip Summary -->
        <Border BorderThickness="0 0 0 1" BorderBrush="LightGray" Padding="30" Margin="0 0 0 20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Margin="0 0 20 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0 0 0 15">
                        <TextBlock Text="Borrower" Foreground="{StaticResource FontDark}" FontSize="20" FontWeight="Bold"/>
                        <Border BorderBrush="Gray" BorderThickness="0 0 0 .5" Padding="0 5">
                            <TextBlock Text="{Binding Slip.BorrowerName}" Foreground="{StaticResource FontDark}" FontWeight="SemiBold" FontSize="18"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Margin="0 0 0 15">
                        <TextBlock Text="Subject Title" Foreground="{StaticResource FontDark}" FontSize="20" FontWeight="Bold"/>
                        <Border BorderBrush="Gray" BorderThickness="0 0 0 .5" Padding="0 5">
                            <TextBlock Text="{Binding Slip.SubjectTitle}" FontSize="18"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Margin="0 0 0 15">
                        <TextBlock Text="Subject Code" Foreground="{StaticResource FontDark}" FontSize="20" FontWeight="Bold"/>
                        <Border BorderBrush="Gray" BorderThickness="0 0 0 .5" Padding="0 5">
                            <TextBlock Text="{Binding Slip.SubjectCode}" Foreground="Gray" FontSize="18"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">
                        <TextBlock Text="Class Schedule" Foreground="{StaticResource FontDark}" FontSize="20" FontWeight="Bold"/>
                        <Border BorderBrush="Gray" BorderThickness="0 0 0 .5" Padding="0 5">
                            <TextBlock Text="{Binding Slip.ClassSchedule}" FontSize="18" Margin="10 0 0 0"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Instructor" Foreground="{StaticResource FontDark}" FontSize="20" FontWeight="Bold"/>
                        <Border BorderBrush="Gray" BorderThickness="0 0 0 .5" Padding="0 5">
                            <TextBlock Text="{Binding Slip.Instructor}" FontSize="18" Margin="10 0 0 0"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="2">
                        <TextBlock Text="Date of Use" Foreground="{StaticResource FontDark}" FontSize="20" FontWeight="Bold"/>
                        <Border BorderBrush="Gray" BorderThickness="0 0 0 .5" Padding="0 5">
                            <TextBlock Text="{Binding Slip.DateOfUse}" FontSize="18" Margin="10 0 0 0"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Items List -->
        <DataGrid ItemsSource="{Binding Details}"
                  AutoGenerateColumns="False"
                  Grid.Row="1"
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  Margin="0 0 0 10"
                  HorizontalScrollBarVisibility="Auto"
                  MinWidth="800">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Item" Binding="{Binding ItemName}" Width="300"/>
                <DataGridTextColumn Header="Qty Borrowed" Binding="{Binding QuantityBorrowed}" Width="150"/>
                
                <!-- Qty Released: Editable, integer only -->
                <DataGridTemplateColumn Header="Qty Released" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding QuantityReleased, TargetNullValue='', Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                     PreviewTextInput="NumericOnly_PreviewTextInput"
                                     Width="140"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="0 10"
                                     VerticalContentAlignment="Center"
                                     MaxLength="5"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Date Released" Binding="{Binding DateReleased, StringFormat=d, TargetNullValue=''}" Width="150"/>
                
                <!-- Qty Returned: Editable, integer only -->
                <DataGridTemplateColumn Header="Qty Returned" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding QuantityReturned, TargetNullValue='', Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                     IsEnabled="{Binding Type, Converter={StaticResource NonConsumableToBoolConverter}}"
                                     Width="140"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="0 10"
                                     VerticalContentAlignment="Center"
                                     MaxLength="5"
                                     PreviewTextInput="NumericOnly_PreviewTextInput"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Date Returned" Binding="{Binding DateReturned, StringFormat=d, TargetNullValue=''}" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="150"/>
                <DataGridTextColumn Header="Remarks" Binding="{Binding Remarks}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
            <Button Content="Save" Style="{StaticResource OriginalButtonStyle}" Width="100" Command="{Binding SaveCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        </StackPanel>
    </Grid>
</Window>
