<!-- Add_Slip_View.xaml -->

<Window x:Class="che_system.modals.view.Add_Slip_View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:che_system.modals.view"
        xmlns:conv="clr-namespace:che_system.converters"
        xmlns:cc="clr-namespace:che_system.custom_controls"
        mc:Ignorable="d"
        Title="Add_Slip_View" 
        AllowsTransparency="True"
        Background="Transparent"
        Width="1400"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">

    <Border CornerRadius="15" Margin="0" Background="White" BorderBrush="{StaticResource BorderGradient}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0">
                <Grid Grid.Row="0" Height="50" VerticalAlignment="Center" Margin="15 0">
                    <!-- Control Bar -->
                    <TextBlock VerticalAlignment="Center" Text="New Borrower Slip" Margin="15 0 0 0" FontSize="30" FontWeight="Bold" Foreground="{StaticResource FontDark}"/>
                    <StackPanel x:Name="Control_Bar_Panel"
                                Orientation="Horizontal"
                                FlowDirection="RightToLeft"
                                Background="Transparent"
                                MouseLeftButtonDown="Control_Bar_Panel_MouseLeftButtonDown"
                                MouseEnter="Control_Bar_Panel_MouseEnter">
                        <Button x:Name="Close_Button"
                                Command="{Binding Cancel_Command}"
                                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                                Style="{StaticResource Control_Button}"
                                Tag="{StaticResource FontDark}">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8BB;" FontSize="15"/>
                        </Button>

                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".8*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid Margin="20 0" Grid.Column="0">
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Borrower Info -->
                        <GroupBox Header="Borrower Information"
                          FontSize="14"
                          Grid.Row="1"
                          Margin="0 0 0 15">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Margin="5" Grid.Row="0" Grid.Column="0">
                                    <TextBlock Text="Name" FontSize="20"/>
                                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="Auto"
                             Style="{StaticResource InputTextBoxStyle}"
                             FontSize="16"
                             Background="{StaticResource InputBackgroundColor}"
                             BorderThickness="0"
                             Padding="5 10"/>
                                </StackPanel>

                                <StackPanel Margin="5" Grid.Row="0" Grid.Column="1">
                                    <TextBlock Text="Subject Title" FontSize="20"/>
                                    <TextBox Text="{Binding SubjectTitle, UpdateSourceTrigger=PropertyChanged}" Width="Auto"
                             Style="{StaticResource InputTextBoxStyle}"
                             FontSize="16"
                             Background="{StaticResource InputBackgroundColor}"
                             BorderThickness="0"
                             Padding="5 10"/>
                                </StackPanel>

                                <StackPanel Margin="5" Grid.Row="1" Grid.Column="0">
                                    <TextBlock Text="Subject Code" FontSize="20"/>
                                    <TextBox Text="{Binding SubjectCode, UpdateSourceTrigger=PropertyChanged}" Width="Auto"
                             Style="{StaticResource InputTextBoxStyle}"
                             FontSize="16"
                             Background="{StaticResource InputBackgroundColor}"
                             BorderThickness="0"
                             Padding="5 10"/>
                                </StackPanel>

                                <StackPanel Margin="5" Grid.Row="1" Grid.Column="1">
                                    <TextBlock Text="Class Schedule" FontSize="20"/>
                                    <TextBox Text="{Binding ClassSchedule, UpdateSourceTrigger=PropertyChanged}" Width="Auto"
                             Style="{StaticResource InputTextBoxStyle}"
                             FontSize="16"
                             Background="{StaticResource InputBackgroundColor}"
                             BorderThickness="0"
                             Padding="5 10"/>
                                </StackPanel>

                                <StackPanel Margin="5" Grid.Row="2" Grid.Column="0">
                                    <TextBlock Text="Instructor" FontSize="20"/>
                                    <TextBox Text="{Binding Instructor, UpdateSourceTrigger=PropertyChanged}" Width="Auto"
                                             Style="{StaticResource InputTextBoxStyle}"
                                             FontSize="16"
                                             Background="{StaticResource InputBackgroundColor}"
                                             BorderThickness="0"
                                             Padding="5 10"/>
                                </StackPanel>
                            </Grid>
                        </GroupBox>

                        <!-- Slip Info -->
                        <GroupBox Header="Slip Information"
                          FontSize="14"
                          Grid.Row="2"
                          Margin="0 0 0 15">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Margin="5" Grid.Column="0">
                                        <TextBlock Text="Date Filed" FontSize="20"/>
                                        <DatePicker SelectedDate="{Binding DateFiled}" Width="Auto"
                                                    FontSize="16"
                                                    Padding="5 10"/>
                                    </StackPanel>

                                    <StackPanel Margin="5" Grid.Column="1">
                                        <TextBlock Text="Date of Use" FontSize="20"/>
                                        <DatePicker SelectedDate="{Binding DateOfUse}" Width="Auto"
                                                    FontSize="16"
                                                    Padding="5 10"/>
                                    </StackPanel>

                                    <StackPanel Margin="5" Grid.Column="2">
                                        <TextBlock Text="Received By" FontSize="20"/>
                                        <TextBox Text="{Binding ReceivedByDisplay, Mode=OneWay}" IsReadOnly="True" Width="Auto"
                                                 Style="{StaticResource InputTextBoxStyle}"
                                                 FontSize="16"
                                                 Background="{StaticResource InputBackgroundColor}"
                                                 BorderThickness="0"
                                                 Padding="5 10"/>
                                    </StackPanel>
                                </Grid>

                                <Grid Margin="5" Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="Remarks" FontSize="20"/>
                                    <TextBox Grid.Row="1" 
                                             Style="{StaticResource InputTextBoxStyle}"
                                             TextWrapping="Wrap"
                                             FontSize="16"
                                             HorizontalAlignment="Stretch"
                                             VerticalAlignment="Stretch"
                                             Background="{StaticResource InputBackgroundColor}"
                                             BorderThickness="0"
                                             Padding="5 10"/>
                                </Grid>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </Grid>

                <Grid Grid.Column="1" Margin="0 0 20 0">
                    <!-- Slip Details Table -->
                    <GroupBox Header="Slip Details (Items)"
                              Grid.Row="3"
                              Margin="0 0 0 15">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <!-- DataGrid fills all available space -->
                            </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Button Content="List Items"
                                            Command="{Binding ListItemsCommand}"
                                            Style="{StaticResource OriginalButtonStyle}"/>
                                </Grid>

                            <DataGrid x:Name="SlipDetailsDataGrid"
                                      ItemsSource="{Binding SlipDetails}"
                                      FontSize="18"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      Focusable="False"
                                      Margin="0 0 0 10"
                                      Padding="0 15"
                                      Grid.Row="1">

                                <DataGrid.Columns>
                                    <!-- Item Name with ComboBox (autocomplete) -->
                                    <DataGridTemplateColumn Header="Item Name" Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding ItemName}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- Chemical Formula -->
                                    <DataGridTemplateColumn Header="Formula" Width=".4*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding ChemicalFormula}" 
                                                           HorizontalAlignment="Center" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- Available Quantity -->
                                    <DataGridTemplateColumn Header="Available" Width=".4*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding AvailableQuantity}" 
                                                           HorizontalAlignment="Center" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <!-- Quantity -->
                                    <DataGridTemplateColumn Header="Quantity" Width=".4*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <Button Content="-" Command="{Binding DataContext.DecrementQuantityCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                            CommandParameter="{Binding}"
                                                            Height="30"
                                                            Width="30"
                                                            FontSize="25"
                                                            Margin="0"
                                                            Padding="0"
                                                            Style="{StaticResource OriginalButtonStyle}"/>
                                                    <TextBox Text="{Binding QuantityBorrowedText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                             Width="50"
                                                             HorizontalAlignment="Center" 
                                                             FontSize="18"
                                                             Padding="0"
                                                             Margin="0"
                                                             Background="Transparent"
                                                             BorderThickness="0"
                                                             HorizontalContentAlignment="Center"
                                                             VerticalContentAlignment="Center"
                                                             PreviewTextInput="NumericOnly_PreviewTextInput"/>

                                                    <Button Content="+" Command="{Binding DataContext.IncrementQuantityCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                            CommandParameter="{Binding}" 
                                                            Width="30" 
                                                            HorizontalAlignment="Right"
                                                            FontSize="20"
                                                            Margin="0" 
                                                            Padding="0"
                                                            Style="{StaticResource OriginalButtonStyle}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </Grid>

            <Grid Grid.Row="2">
                <!-- Footer Buttons -->
                <StackPanel Orientation="Horizontal"
                            Grid.Row="4"
                            HorizontalAlignment="Right"
                            Margin="15">
                    <Button Style="{DynamicResource OriginalButtonStyle}"
                    Content="Cancel"
                    Command="{Binding Cancel_Command}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Width="100"
                    Background="#E0E0E0"
                    Foreground="{StaticResource FontDark}"
                    BorderThickness="0"
                    Margin="0 0 10 0"/>
                    <Button Style="{DynamicResource OriginalButtonStyle}"
                    BorderThickness="0"
                    Content="Save"
                    Command="{Binding Save_Command}"
                    Width="100"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
