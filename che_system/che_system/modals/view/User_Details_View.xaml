<Window x:Class="che_system.modals.view.User_Details_View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:icon="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        Title="User Details"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        MinWidth="420"
        Padding="20">

	<Window.Resources>
		<!-- Minimal caption/value styles aligned with theme -->
		<Style x:Key="CaptionText" TargetType="TextBlock">
			<Setter Property="Foreground" Value="{StaticResource OpaqueWhite}"/>
			<Setter Property="Opacity" Value="0.85"/>
			<Setter Property="FontSize" Value="12"/>
			<Setter Property="Margin" Value="0,0,0,4"/>
		</Style>
		<Style x:Key="ValueText" TargetType="TextBlock">
			<Setter Property="Foreground" Value="{StaticResource FontDark}"/>
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="TextWrapping" Value="Wrap"/>
			<Setter Property="TextTrimming" Value="CharacterEllipsis"/>
		</Style>
		<Style x:Key="FieldContainer" TargetType="StackPanel">
			<Setter Property="Margin" Value="0,0,16,16"/>
		</Style>
	</Window.Resources>
	
	
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

		<!-- Header -->
		<DockPanel Grid.Row="0" LastChildFill="False">
			<StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
				<Border Background="{StaticResource BgTertiary}" CornerRadius="8" Padding="10" Margin="0,0,10,0">
					<icon:IconBlock Icon="User" Width="18" Height="18" Foreground="{StaticResource FontPrimary}"/>
				</Border>
				<TextBlock Text="User Details"
						   VerticalAlignment="Center"
						   FontSize="18"
						   FontWeight="SemiBold"/>
			</StackPanel>
		</DockPanel>

		<!-- Divider -->
		<Border Grid.Row="1" BorderThickness="0,1,0,0" BorderBrush="#2A2A2A" Margin="0 10 0 20"/>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Labels -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="User ID" FontSize="16" Opacity="0.8" Margin="0,10"/>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="First Name" FontSize="16" Opacity="0.8" Margin="0,10"/>
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Last Name" FontSize="16" Opacity="0.8" Margin="0,10"/>
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Username" FontSize="16" Opacity="0.8" Margin="0,10"/>
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Birthdate" FontSize="16" Opacity="0.8" Margin="0,10"/>
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Role" FontSize="16" Opacity="0.8" Margin="0,10"/>
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Created At" FontSize="16" Opacity="0.8" Margin="0,10"/>
            <TextBlock Grid.Row="7" Grid.Column="0" Text="Created By" FontSize="16" Opacity="0.8" Margin="0,10"/>

            <!-- Values -->
            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding user_id}" FontSize="14" Margin="0,10"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding first_name}" FontSize="14" Margin="0,10"/>
            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding last_name}" FontSize="14" Margin="0,10"/>
            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding username}" FontSize="14" Margin="0,10"/>
            <!-- birthday and created_at are pre-formatted as MM/dd/yyyy -->
            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding birthday}" FontSize="14" Margin="0,10"/>
            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding role}" FontSize="14" Margin="0,10"/>
            <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding created_at}" FontSize="14" Margin="0,10"/>
            <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding created_by}" FontSize="14" Margin="0,10"/>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Style="{StaticResource OriginalButtonStyle}" Content="Close" Width="90" Height="Auto" Padding="0 5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>