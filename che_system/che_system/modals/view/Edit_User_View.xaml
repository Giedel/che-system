<Window x:Class="che_system.modals.view.Edit_User_View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:che_system.modals.view"
        xmlns:custom="clr-namespace:che_system.custom_controls"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="Edit_User_View"
        Width="400">

    <Window.Resources>
        <!-- Style applied ONLY in this window (not global, so Login_View unaffected) -->
        <Style x:Key="PasswordInputStyle" TargetType="custom:Bindable_Password_Box">
            <Setter Property="Foreground" Value="{StaticResource FontDark}"/>
            <Setter Property="Background" Value="{StaticResource InputBackgroundColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5 10"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Window.Resources>

    <Border Height="700" Background="{StaticResource BgLight}" CornerRadius="15" BorderThickness="1" BorderBrush="Gray">
        <Grid Margin="30 20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/> <!-- Confirm password row -->
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" VerticalAlignment="Center" Margin="0 0 0 15">
                <TextBlock Text="EDIT USER" FontSize="20" FontWeight="Bold"/>
                <StackPanel x:Name="Control_Bar_Panel"
                            Orientation="Horizontal"
                            FlowDirection="RightToLeft"
                            Background="Transparent"
                            Margin="2"
                            MouseLeftButtonDown="Control_Bar_Panel_MouseLeftButtonDown"
                            MouseEnter="Control_Bar_Panel_MouseEnter">
                    <Button x:Name="Close_Button"
                            Command="{Binding Cancel_Command}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                            Style="{StaticResource Control_Button}"
                            Tag="{StaticResource FontDark}">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8BB;" FontSize="15"/>
                    </Button>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="1" Margin="0 0 0 10">
                <TextBlock Text="First Name" FontSize="18"/>
                <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource InputTextBoxStyle}"
                         FontSize="16"
                         Background="{StaticResource InputBackgroundColor}"
                         BorderThickness="0"
                         Padding="5 10"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0 0 0 10">
                <TextBlock Text="Last Name" FontSize="18"/>
                <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource InputTextBoxStyle}"
                         FontSize="16"
                         Background="{StaticResource InputBackgroundColor}"
                         BorderThickness="0"
                         Padding="5 10"/>
            </StackPanel>

            <Grid Grid.Row="3" Margin="0 0 0 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width=".05*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="ID Number" FontSize="18"/>
                    <TextBox Text="{Binding IdNumber, Mode=OneWay}" IsReadOnly="True"
                             Style="{StaticResource InputTextBoxStyle}"
                             FontSize="16"
                             Background="#EEE"
                             BorderThickness="0"
                             Padding="5 10"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Birthdate" FontSize="18"/>
                    <DatePicker SelectedDate="{Binding Birthday}"
                                FontSize="16"
                                Padding="5 10"/>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="4" Margin="0 0 0 10">
                <TextBlock Text="Role" FontSize="18"/>
                <ComboBox ItemsSource="{Binding AvailableRoles}"
                          DisplayMemberPath="DisplayName"
                          SelectedValuePath="Value"
                          SelectedValue="{Binding Role, UpdateSourceTrigger=PropertyChanged}"
                          VerticalContentAlignment="Center"
                          HorizontalContentAlignment="Center"
                          Background="Transparent"
                          BorderBrush="{StaticResource BorderPrimary}"
                          FontSize="16"
                          Padding="5 12"/>
            </StackPanel>

            <StackPanel Grid.Row="5" Margin="0 0 0 10">
                <TextBlock Text="Username" FontSize="18"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource InputTextBoxStyle}"
                         FontSize="16"
                         Background="{StaticResource InputBackgroundColor}"
                         BorderThickness="0"
                         Padding="5 10"/>
            </StackPanel>

            <StackPanel Grid.Row="6" Margin="0 0 0 10">
                <TextBlock Text="New Password (leave blank to keep current)" FontSize="16"/>
                <custom:Bindable_Password_Box Password="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                                              FontSize="14"
                                              Foreground="{StaticResource FontDark}"
                                              Background="{StaticResource InputBackgroundColor}"
                                              BorderThickness="0"
                                              Padding="0"/>
            </StackPanel>

            <StackPanel Grid.Row="7" Margin="0 0 0 10">
                <TextBlock Text="Confirm New Password" FontSize="18"/>
                <custom:Bindable_Password_Box Password="{Binding ConfirmPassword, UpdateSourceTrigger=PropertyChanged}"
                                              FontSize="14"
                                              Foreground="{StaticResource FontDark}"
                                              Background="{StaticResource InputBackgroundColor}"
                                              BorderThickness="0"
                                              Padding="0"/>
            </StackPanel>

            <Grid Grid.Row="8">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0 10 0 0">
                    <Button Style="{DynamicResource OriginalButtonStyle}"
                            Content="Cancel"
                            Command="{Binding Cancel_Command}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                            Width="100"
                            Background="#E0E0E0"
                            Foreground="{StaticResource FontDark}"
                            BorderThickness="0"
                            Margin="0 0 10 0"/>
                    <Button Style="{DynamicResource OriginalButtonStyle}"
                            BorderThickness="0"
                            Content="Save"
                            Command="{Binding Save_Command}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                            Width="100"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>