<UserControl x:Class="che_system.view.Reports_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:che_system.view"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <!-- Top Search Bar -->
        <Grid DockPanel.Dock="Top" Margin="0 0 0 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <TextBox Style="{DynamicResource InputTextBoxStyle}" VerticalAlignment="Center" x:Name="MyTextBox" FontSize="20" FontFamily="{StaticResource Inter}" Padding="0 5" Width="500" BorderThickness="0 0 0 1" Background="Transparent"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="Search reports..." 
                           Foreground="Gray"
                           FontFamily="{StaticResource Inter}"
                           FontSize="20"
                           Padding="3 0 0 0"
                           VerticalAlignment="Center"
                           Margin="5,0,0,0"
                           IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=MyTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <Button Style="{DynamicResource OriginalButtonStyle}" Grid.Column="2" Content="📤 Export" Margin="0 0 5 0" FlowDirection="LeftToRight" Command="{Binding Open_Add_Slip_Command}"/>
        </Grid>
        
        <!-- TabControl for Reports -->
        <TabControl Margin="5">
            <!-- Monthly Usage -->
            <TabItem Header="Monthly Usage">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <TextBlock Text="Monthly Chemical Usage Report" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Margin="10"/>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="1">
                        <DataGrid ItemsSource="{Binding FilteredItemUsage}" AutoGenerateColumns="False" Focusable="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}" Width="*"/>
                            <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*"/>
                            <DataGridTextColumn Header="Total Borrowed" Binding="{Binding TotalBorrowed}" Width="*"/>
                            <DataGridTextColumn Header="Total Returned" Binding="{Binding TotalReturned}" Width="*"/>
                            <DataGridTextColumn Header="Usage Count" Binding="{Binding UsageCount}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Inventory Status -->
            <TabItem Header="Inventory Status">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <TextBlock Text="Inventory Status Report" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Margin="10"/>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="1">
                        <DataGrid ItemsSource="{Binding FilteredBorrowerActivity}" AutoGenerateColumns="False" Focusable="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Borrower" Binding="{Binding Name}" Width="*"/>
                                <DataGridTextColumn Header="Subject Code" Binding="{Binding SubjectCode}" Width="*"/>
                                <DataGridTextColumn Header="Total Slips" Binding="{Binding TotalSlips}" Width="*"/>
                                <DataGridTextColumn Header="Completed" Binding="{Binding CompletedSlips}" Width="*"/>
                                <DataGridTextColumn Header="Active" Binding="{Binding ActiveSlips}" Width="*"/>
                                <DataGridTextColumn Header="Pending" Binding="{Binding PendingSlips}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Pending Replacements -->
            <TabItem  Header="Pending Replacements">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <TextBlock Text="Damages for Replacement Report" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" Margin="10"/>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="1">
                        <DataGrid ItemsSource="{Binding FilteredItemUsage}" AutoGenerateColumns="False" Focusable="False" IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}" Width="*"/>
                                <DataGridTextColumn Header="Quantity Needed" Binding="{Binding TotalBorrowed}" Width="*"/>
                                <DataGridTextColumn Header="Group" Binding="{Binding Category}" Width="*"/>
                                <DataGridTextColumn Header="Date Needed" Binding="{Binding UsageCount}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</UserControl>
