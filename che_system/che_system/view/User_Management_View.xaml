<!-- User_Management_View.xaml -->
<UserControl x:Class="che_system.view.User_Management_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:icon="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:Stat_View="clr-namespace:che_system.custom_controls"
             xmlns:local="clr-namespace:che_system.view"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1080">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Search Bar -->
        <Grid Grid.Row="0" Margin="10 0 10 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <TextBox VerticalAlignment="Center" x:Name="MyTextBox" FontSize="20" FontFamily="{StaticResource Inter}" Padding="0 5" Width="500" BorderThickness="0 0 0 1" Background="Transparent" CaretBrush="White" Foreground="{StaticResource FontPrimary}"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Margin="5 0 0 0"/>
                <TextBlock Text="Search users..." 
                           Foreground="{StaticResource OpaqueWhite}"
                           FontFamily="{StaticResource Inter}"
                           FontSize="20"
                           Padding="3 0 0 0"
                           VerticalAlignment="Center"
                           Margin="5,0,0,0"
                           IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=MyTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <Button Style="{DynamicResource LightButtonStyle}" Grid.Column="2" Content="➕ Add User" Margin="0 0 5 0" FlowDirection="LeftToRight" Command="{Binding AddUserCommand}"/>
        </Grid>

        <Grid Grid.Row="1">
            <ItemsControl ItemsSource="{Binding UserStats}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Stat_View:Card_1_Clickable
                                HorizontalAlignment="Stretch"
                                Command="{Binding DataContext.ApplyStatFilterCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding Title}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".65*"/>
                <ColumnDefinition Width=".35*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="System Users" Margin="10" FontSize="20" FontWeight="SemiBold"/>
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding FilteredUsers}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Margin="10,0"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserSortColumns="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="User ID" Binding="{Binding user_id}" Width="*" />
                            <DataGridTextColumn Header="First Name" Binding="{Binding first_name}" Width="*" />
                            <DataGridTextColumn Header="Last Name" Binding="{Binding last_name}" Width="*" />
                            <DataGridTextColumn Header="Username" Binding="{Binding username}" Width="*" />
                            <DataGridTextColumn Header="Role" Binding="{Binding role}" Width="*" />
                            <!-- Actions -->
                            <DataGridTemplateColumn Header="Actions" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <!-- View -->
                                            <Button ToolTip="View User"
                                                    Command="{Binding DataContext.ViewUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource IconButtonStyle}">
                                                <icon:IconBlock Icon="Eye" Foreground="#8BE9FD" Width="20" Height="20" FontSize="18"/>
                                            </Button>
                                            <!-- Edit -->
                                            <Button Command="{Binding DataContext.EditUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Margin="10 0 0 0"
                                                    ToolTip="Edit User"
                                                    Style="{StaticResource IconButtonStyle}">
                                                <icon:IconBlock Icon="Edit" Foreground="#FFD966" Width="20" Height="20" FontSize="18"/>
                                            </Button>
                                            <!-- Delete -->
                                            <Button Command="{Binding DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Margin="10 0 0 0"
                                                    ToolTip="Delete User"
                                                    Style="{StaticResource IconButtonStyle}">
                                                <icon:IconBlock Icon="Trash" Foreground="#FF6B6B" Width="20" Height="20" FontSize="18"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                        <DataGrid.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#0078D4"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#E1F0FF"/>
                        </DataGrid.Resources>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Calendar + Event Notes -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Schedule / Notes" Margin="10" FontSize="20" FontWeight="SemiBold"/>

                    <!-- Full-size calendar (fills most of vertical area) -->
                    <Calendar Grid.Row="1"
                              x:Name="MainCalendar"
                              SelectedDate="{Binding SelectedDate, Mode=TwoWay}"
                              DisplayDate="{Binding SelectedDate}"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              Margin="10"
                              SelectionMode="SingleDate"
                              RenderTransformOrigin="0.5,0.5">
                        <Calendar.RenderTransform>
                            <ScaleTransform ScaleX="2" ScaleY="2"/>
                        </Calendar.RenderTransform>
                    </Calendar>

                    <!-- Add Note Section -->
                    <StackPanel Grid.Row="2" Margin="10,0,10,5">
                        <TextBlock Text="{Binding SelectedDate, StringFormat='Selected Date: {0:MMMM dd, yyyy}'}"
                                   FontWeight="SemiBold"
                                   FontSize="14"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Margin="10,0,10,5">
                        <TextBlock Text="Add Note / Event:" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,3"/>
                        <TextBox Text="{Binding NewEventText, UpdateSourceTrigger=PropertyChanged}"
                                 AcceptsReturn="True"
                                 Height="60"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 Padding="5"/>
                        <Button Content="Add"
                                Margin="0,5,0,0"
                                HorizontalAlignment="Right"
                                Width="90"
                                Command="{Binding AddEventCommand}"
                                IsEnabled="{Binding NewEventText, Converter={StaticResource NullOrWhiteSpaceToBoolConverter}}"/>
                    </StackPanel>

                    <!-- Events list for selected day -->
                    <Grid Grid.Row="4" Margin="10,0,10,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Notes / Events for Day"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,4"/>
                        <Border Grid.Row="1" MinHeight="170" BorderThickness="1" BorderBrush="#2A2A2A" CornerRadius="4" Padding="4">
                            <ScrollViewer>
                                <ItemsControl ItemsSource="{Binding SelectedDateEvents}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#3A3A3A" BorderThickness="0 0 0 1" Padding="4" Margin="0 0 0 4">
                                                <DockPanel LastChildFill="True">
                                                    <Button DockPanel.Dock="Right"
                                                            Command="{Binding DataContext.DeleteEventCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Width="24" Height="24"
                                                            ToolTip="Delete"
                                                            Style="{StaticResource IconButtonStyle}">
                                                        <icon:IconBlock Icon="Trash" Width="16" Height="16" Foreground="#FF6B6B"/>
                                                    </Button>
                                                    <TextBlock Text="{Binding Text}" TextWrapping="Wrap" Margin="0,0,8,0"/>
                                                </DockPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                        <TextBlock Grid.Row="1"
                                   Text="No notes for this date."
                                   Foreground="Gray"
                                   FontStyle="Italic"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedDateEvents.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
