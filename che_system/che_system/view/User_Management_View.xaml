<!-- User_Management_View.xaml -->
    
    <UserControl x:Class="che_system.view.User_Management_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:icon="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:Stat_View="clr-namespace:che_system.custom_controls"
             xmlns:local="clr-namespace:che_system.view"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1080">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>  
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Search Bar -->
        <Grid Grid.Row="0" Margin="10 0 10 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <TextBox VerticalAlignment="Center" x:Name="MyTextBox" FontSize="20" FontFamily="{StaticResource Inter}" Padding="0 5" Width="500" BorderThickness="0 0 0 1" Background="Transparent" CaretBrush="White" Foreground="{StaticResource FontPrimary}"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Margin="5 0 0 0"/>
                <TextBlock Text="Search users..." 
                           Foreground="{StaticResource OpaqueWhite}"
                           FontFamily="{StaticResource Inter}"
                           FontSize="20"
                           Padding="3 0 0 0"
                           VerticalAlignment="Center"
                           Margin="5,0,0,0"
                           IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=MyTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <Button Style="{DynamicResource OriginalButtonStyle}" Grid.Column="2" Content="➕ Add User" Margin="0 0 5 0" FlowDirection="LeftToRight" Command="{Binding AddUserCommand}"/>
        </Grid>

        <Grid Grid.Row="1">
            <ItemsControl ItemsSource="{Binding UserStats}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Stat_View:Card_1 HorizontalAlignment="Stretch"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".65*"/>
                <ColumnDefinition Width=".35*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="System Users" Margin="10" FontSize="20" FontWeight="SemiBold"/>
                    <DataGrid Grid.Row="1" ItemsSource="{Binding FilteredUsers}" AutoGenerateColumns="False" IsReadOnly="True" Margin="10,0" CanUserAddRows="False" CanUserDeleteRows="False" CanUserSortColumns="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="User ID" Binding="{Binding user_id}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="First Name" Binding="{Binding first_name}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Last Name" Binding="{Binding last_name}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Username" Binding="{Binding username}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Role" Binding="{Binding role}" Width="*" IsReadOnly="True"/>
                        </DataGrid.Columns>
                        <DataGrid.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#0078D4"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#E1F0FF"/>
                        </DataGrid.Resources>
                    </DataGrid>
                </Grid>
            </Border>

            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Birthday Calendar" Margin="10" FontSize="20" FontWeight="SemiBold"/>
                    <Calendar Grid.Row="1" SelectedDate="{Binding SelectedDate, Mode=TwoWay}" DisplayDate="{Binding SelectedDate}" Margin="10,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    <StackPanel Grid.Row="2" Margin="10,0,10,10">
                        <TextBlock Text="Users with Birthdays" FontWeight="SemiBold" Margin="0,0,0,5" FontSize="14"/>
                        <ListBox ItemsSource="{Binding SelectedBirthdayUsers}" Height="150" ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                    <TextBlock Margin="0,0,10,0">
                                        <Run Text="{Binding first_name}"/>
                                        <Run Text=" "/>
                                        <Run Text="{Binding last_name}"/>
                                    </TextBlock>
                                        <TextBlock Text="(" Foreground="Gray"/>
                                        <TextBlock Text="{Binding role}"/>
                                        <TextBlock Text=")" Foreground="Gray"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <TextBlock Text="No birthdays today" Foreground="Gray" FontStyle="Italic" Margin="0,5,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedBirthdayUsers.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
