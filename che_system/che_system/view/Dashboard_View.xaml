<!--  Dashboard_View.xaml -->
    
    <UserControl x:Class="che_system.view.Dashboard_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:che_system.view"
             xmlns:conv="clr-namespace:che_system.converters"
             xmlns:icon="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:Stat_View="clr-namespace:che_system.custom_controls"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1080">

    <UserControl.Resources>
        <conv:AlertColorConverter x:Key="AlertColorConverter" />
    </UserControl.Resources>


    <Grid>
        <!-- Quick Stats -->
        <Grid Height="Auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Quick Stats Cards -->
            <Grid Grid.Row="0">
                <ItemsControl ItemsSource="{Binding QuickStats}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="4"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- ✅ Fixed: use Card, not Card_1 -->
                            <Stat_View:Card_1 HorizontalAlignment="Stretch"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>

            <!-- System Alerts & Recent Activity -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!-- 🧠 SYSTEM ALERTS -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header with Refresh -->
                        <DockPanel Grid.Row="0" Margin="10,5">
                            <TextBlock Text="System Alerts"
                                       FontSize="25"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource FontDark}"
                                       DockPanel.Dock="Left"/>

                            <!-- Refresh Button -->
                            <Button Command="{Binding RefreshDashboardCommand}" 
                                    ToolTip="Refresh Alerts"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    HorizontalAlignment="Right">
                                <icon:IconBlock Icon="RotateRight" Foreground="{StaticResource FontDark}" Width="20" Height="20"/>
                            </Button>
                        </DockPanel>

                        <!-- Alerts List -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding SystemAlerts}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderThickness="0,0,0,1" BorderBrush="#EEE" Padding="8,6">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <!-- Colored Dot Indicator -->
                                                <Ellipse Width="10" Height="10" Margin="0,3,8,0">
                                                    <Ellipse.Fill>
                                                        <Binding Path="Type" Converter="{StaticResource AlertColorConverter}" />
                                                    </Ellipse.Fill>
                                                </Ellipse>

                                                <!-- Alert Text -->
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Message}" FontSize="18" Foreground="{StaticResource FontDark}"/>
                                                    <TextBlock Text="{Binding LoggedAt, StringFormat='{}{0:MMM dd, yyyy}'}"
                                               FontSize="14" Foreground="Gray"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- 🧠 RECENT ACTIVITY -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header with Refresh -->
                        <DockPanel Grid.Row="0" Margin="10,5">
                            <TextBlock Text="Recent Activity"
                       FontSize="25"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource FontDark}"
                       DockPanel.Dock="Left"/>

                            <Button Command="{Binding RefreshDashboardCommand}" 
                    ToolTip="Refresh Activity"
                    Background="Transparent"
                    BorderThickness="0"
                    HorizontalAlignment="Right">
                                <icon:IconBlock Icon="RotateRight" Foreground="{StaticResource FontDark}" Width="20" Height="20"/>
                            </Button>
                        </DockPanel>

                        <!-- Activities List -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding RecentActivities}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderThickness="0,0,0,1" BorderBrush="#EEE" Padding="8,6">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Description}"
                                           FontSize="18"
                                           Foreground="{StaticResource FontDark}"
                                           TextWrapping="Wrap"/>

                                                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                    <TextBlock Text="{Binding UserId}"
                                               FontSize="14"
                                               Foreground="Gray"/>
                                                    <TextBlock Text=" • " FontSize="14" Foreground="Gray" Margin="3,0"/>
                                                    <TextBlock Text="{Binding ActionType}"
                                               FontSize="14"
                                               Foreground="Gray"/>
                                                    <TextBlock Text=" • " FontSize="14" Foreground="Gray" Margin="3,0"/>
                                                    <TextBlock Text="{Binding DateTime, StringFormat='{}{0:MMM dd, yyyy hh:mm tt}'}"
                                               FontSize="14"
                                               Foreground="Gray"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- Quick Actions -->
            <Grid Grid.Row="2">
                <Border Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Quick Actions" Padding="10" FontSize="25" FontWeight="SemiBold" Foreground="{StaticResource FontDark}"/>

                        <Grid Grid.Row="2" Height="Auto">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Command="{Binding Create_Borrowing_Slip_Command}" Style="{StaticResource Quick_Action_Button_Style}" Margin="20 25">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15 20">
                                    <icon:IconBlock Icon="FileContract" Style="{StaticResource Quick_Button_Icon}" />
                                    <TextBlock Text="Create Borrowing Slip" Style="{StaticResource Quick_Button_Text}"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="1" Command="{Binding Search_Inventory_Command}" Style="{StaticResource Quick_Action_Button_Style}" Margin="20 25">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15 20">
                                    <icon:IconBlock Icon="FlaskVial" Style="{StaticResource Quick_Button_Icon}" />
                                    <TextBlock Text="Search Inventory" Style="{StaticResource Quick_Button_Text}"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="2" Command="{Binding Process_Return_Command}" Style="{StaticResource Quick_Action_Button_Style}" Margin="20 25">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15 20">
                                    <icon:IconBlock Icon="Tasks" Style="{StaticResource Quick_Button_Icon}" />
                                    <TextBlock Text="Process Return" Style="{StaticResource Quick_Button_Text}"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="3" Command="{Binding Generate_Report_Command}" Style="{StaticResource Quick_Action_Button_Style}" Margin="20 25">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15 20">
                                    <icon:IconBlock Icon="SquarePollHorizontal" Style="{StaticResource Quick_Button_Icon}" />
                                    <TextBlock Text="Generate Report" Style="{StaticResource Quick_Button_Text}"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
