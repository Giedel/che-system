<!-- Borrowing_View.xaml -->
    
    <UserControl x:Class="che_system.view.Borrowing_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:che_system.view"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Margin="10">
        <!-- Top Search Bar -->
        <Grid DockPanel.Dock="Top" Margin="0 0 0 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <TextBox Style="{DynamicResource InputTextBoxStyle}" VerticalAlignment="Center" x:Name="MyTextBox" FontSize="20" FontFamily="{StaticResource Inter}" Padding="0 5" Width="500" BorderThickness="0 0 0 1" Background="Transparent"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="Search ..." 
                           Foreground="Gray"
                           FontFamily="{StaticResource Inter}"
                           FontSize="20"
                           Padding="3 0 0 0"
                           VerticalAlignment="Center"
                           Margin="5,0,0,0"
                           IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=MyTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <Button Style="{DynamicResource OriginalButtonStyle}" Grid.Column="2" Content="➕ Create Slip" Margin="0 0 5 0" FlowDirection="LeftToRight" Command="{Binding Open_Add_Slip_Command}"/>
        </Grid>
        
        <!-- TabControl for Slips -->
        <TabControl>
            <!-- Pending Slips -->
            <TabItem Header="Pending Slips">
                <DataGrid ItemsSource="{Binding FilteredPendingSlips}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Borrower" Binding="{Binding BorrowerName}" Width="*"/>
                        <DataGridTextColumn Header="Subject Code" Binding="{Binding SubjectCode}" Width="*"/>
                        <DataGridTextColumn Header="Date Filed" Binding="{Binding DateFiled, StringFormat=d}" Width="*"/>
                        <DataGridTextColumn Header="Date of Use" Binding="{Binding DateOfUse, StringFormat=d}" Width="*"/>
                        <DataGridTextColumn Header="Received By" Binding="{Binding ReceivedByDisplay}" Width="*"/>
                        <DataGridTextColumn Header="Remarks" Binding="{Binding Remarks}" Width="*"/>
                        <DataGridTemplateColumn Header="Actions" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="View Details"
                                            Style="{DynamicResource OriginalButtonStyle}"
                                            Command="{Binding DataContext.Open_Slip_Details_Command, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Padding="5,2"/> 

                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Active Slips -->
            <TabItem Header="Active Slips">
                <DataGrid ItemsSource="{Binding FilteredActiveSlips}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Borrower" Binding="{Binding BorrowerName}" Width="*"/>
                        <DataGridTextColumn Header="Subject Code" Binding="{Binding SubjectCode}" Width="*"/>
                        <DataGridTextColumn Header="Date Filed" Binding="{Binding DateFiled, StringFormat=d}" Width="*"/>
                        <DataGridTextColumn Header="Date of Use" Binding="{Binding DateOfUse, StringFormat=d}" Width="*"/>
                        <DataGridTextColumn Header="Received By" Binding="{Binding ReceivedByDisplay}" Width="*"/>
                        <DataGridTextColumn Header="Released By" Binding="{Binding ReleasedByDisplay}" Width="*"/>
                        <DataGridTextColumn Header="Remarks" Binding="{Binding Remarks}" Width="*"/>
                        <DataGridTemplateColumn Header="Actions" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="View Details"
                                            Style="{DynamicResource OriginalButtonStyle}"
                                            Command="{Binding DataContext.Open_Slip_Details_Command, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Padding="5,2"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- History -->
            <TabItem Header="History">
                <DataGrid ItemsSource="{Binding FilteredCompletedSlips}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Borrower" Binding="{Binding BorrowerName}" Width="*"/>
                        <DataGridTextColumn Header="Subject Code" Binding="{Binding SubjectCode}" Width="*"/>
                        <DataGridTextColumn Header="Date Filed" Binding="{Binding DateFiled, StringFormat=d}" Width="*"/>
                        <DataGridTextColumn Header="Date of Use" Binding="{Binding DateOfUse, StringFormat=d}" Width="*"/>
                        <DataGridTextColumn Header="Received By" Binding="{Binding ReceivedByDisplay}" Width="*"/>
                        <DataGridTextColumn Header="Released By" Binding="{Binding ReleasedByDisplay}" Width="*"/>
                        <DataGridTextColumn Header="Checked By" Binding="{Binding CheckedBy}" Width="*"/>
                        <DataGridTextColumn Header="Remarks" Binding="{Binding Remarks}" Width="*"/>
                        <DataGridTemplateColumn Header="Actions">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="View Details"
                                            Style="{DynamicResource OriginalButtonStyle}"
                                            Command="{Binding DataContext.Open_Slip_Details_Command, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Padding="5,2"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>


                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </DockPanel>
</UserControl>
