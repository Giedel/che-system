<!-- Inventory_View.cs -->

<UserControl x:Class="che_system.view.Inventory_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:che_system.view"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1080">

    <DockPanel Margin="10">

        <!-- Top Search Bar -->
            <Grid DockPanel.Dock="Top" Margin="0 0 0 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <TextBox VerticalAlignment="Center" x:Name="MyTextBox" FontSize="20" FontFamily="{StaticResource Inter}" Padding="0 5" Width="500" BorderThickness="0 0 0 1" Background="Transparent" CaretBrush="White" Foreground="{StaticResource FontPrimary}"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Margin="5 0 0 0"/>
                <TextBlock Text="Search chemicals..." 
                           Foreground="{StaticResource OpaqueWhite}"
                           FontFamily="{StaticResource Inter}"
                           FontSize="20"
                           Padding="3 0 0 0"
                           VerticalAlignment="Center"
                           Margin="5,0,0,0"
                           IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=MyTextBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <Button Style="{DynamicResource OriginalButtonStyle}" BorderThickness="1" Grid.Column="2" Content="➕ Add Item" Margin="0 0 5 0" FlowDirection="LeftToRight" Command="{Binding Open_Add_Item_Command}"/>
        </Grid>


            <!-- Tabs for Chemicals & Apparatus -->
        <TabControl x:Name="Inventory_TabControl">
            <!-- Chemicals Tab -->
            <TabItem Header="Chemicals">
                <DataGrid x:Name="ChemicalsGrid"
              ItemsSource="{Binding FilteredChemicals}"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              Margin="0,5,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding ItemName}" Width="*"/>
                        <DataGridTextColumn Header="Formula" Binding="{Binding ChemicalFormula}" Width=".4*"/>
                        <DataGridTextColumn Header="Quantity" Binding="{Binding QuantityWithUnit}" Width=".4*"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width=".4*"/>
                        <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width=".4*" />
                        <DataGridTextColumn Header="Expiry Date" Binding="{Binding ExpiryDate, StringFormat=d}" Width=".4*"/>

                        <!-- 👇 Action Buttons -->
                        <DataGridTemplateColumn Header="Actions" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <!-- Edit Button -->
                                        <Button Command="{Binding DataContext.Edit_Item_Command, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Edit"
                                                Style="{StaticResource IconButtonStyle}">
                                            <fa:IconBlock Icon="Edit" Foreground="#FFD966" Width="20" Height="20" FontSize="18"/>
                                        </Button>
                                        <!-- Delete Button -->
                                        <Button Command="{Binding DataContext.Delete_Item_Command, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                Margin="10 0 0 0"
                                                CommandParameter="{Binding}"
                                                ToolTip="Delete"
                                                Style="{StaticResource IconButtonStyle}">
                                            <fa:IconBlock Icon="Trash" Foreground="#FF6B6B" Width="20" Height="20" FontSize="18"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Apparatus Tab -->
            <TabItem Header="Apparatus">
                <!-- Data Table -->
                <DataGrid x:Name="ApparatusGrid"
                          ItemsSource="{Binding FilteredApparatus}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding ItemName}" Width="*"/>
                        <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width=".4*"/>
                        <DataGridTextColumn Header="Unit" Binding="{Binding Unit}" Width=".4*"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width=".4*"/>
                        <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width=".4*"/>
                        <!-- 👇 Action Buttons -->
                        <DataGridTemplateColumn Header="Actions" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <!-- Edit Button -->
                                        <Button Command="{Binding DataContext.Edit_Item_Command, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Edit"
                                                Style="{StaticResource IconButtonStyle}">
                                            <fa:IconBlock Icon="Edit" Foreground="#FFD966" Width="20" Height="20" FontSize="18"/>
                                        </Button>
                                        <!-- Delete Button -->
                                        <Button Command="{Binding DataContext.Delete_Item_Command, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                Margin="10 0 0 0"
                                                CommandParameter="{Binding}"
                                                ToolTip="Delete"
                                                Style="{StaticResource IconButtonStyle}">
                                            <fa:IconBlock Icon="Trash" Foreground="#FF6B6B" Width="20" Height="20" FontSize="18"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Supplies Tab -->
            <TabItem Header="Supplies">
                <!-- Data Table -->
                <DataGrid x:Name="SuppliesGrid"
                          ItemsSource="{Binding FilteredSupplies}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Focusable="False"
                          SelectionMode="Extended">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding ItemName}" Width="*"/>
                        <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width=".4*"/>
                        <DataGridTextColumn Header="Unit" Binding="{Binding Unit}" Width=".4*"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width=".4*"/>
                        <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width=".4*"/>
                        <DataGridTextColumn Header="Expiry Date" Binding="{Binding ExpiryDate, StringFormat=d}" Width=".4*"/>
                        <!-- 👇 Action Buttons -->
                        <DataGridTemplateColumn Header="Actions" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <!-- Edit Button -->
                                        <Button Command="{Binding DataContext.Edit_Item_Command, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Edit"
                                                Style="{StaticResource IconButtonStyle}">
                                            <fa:IconBlock Icon="Edit" Foreground="#FFD966" Width="20" Height="20" FontSize="18"/>
                                        </Button>
                                        <!-- Delete Button -->
                                        <Button Command="{Binding DataContext.Delete_Item_Command, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                Margin="10 0 0 0"
                                                CommandParameter="{Binding}"
                                                ToolTip="Delete"
                                                Style="{StaticResource IconButtonStyle}">
                                            <fa:IconBlock Icon="Trash" Foreground="#FF6B6B" Width="20" Height="20" FontSize="18"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Equipment Tab (Added before Miscellaneous) -->
            <TabItem Header="Equipment">
                <!-- Data Table -->
                <DataGrid x:Name="EquipmentGrid"
                          ItemsSource="{Binding FilteredEquipment}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Focusable="False"
                          SelectionMode="Extended">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding ItemName}" Width="*"/>
                        <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width=".4*"/>
                        <DataGridTextColumn Header="Unit" Binding="{Binding Unit}" Width=".4*"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width=".4*"/>
                        <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width=".4*"/>
                        <DataGridTextColumn Header="Calibration Date" Binding="{Binding CalibrationDate, StringFormat=d}" Width=".4*"/>
                        <!-- 👇 Action Buttons -->
                        <DataGridTemplateColumn Header="Actions" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <!-- Edit Button -->
                                        <Button Command="{Binding DataContext.Edit_Item_Command, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Edit"
                                                Style="{StaticResource IconButtonStyle}">
                                            <fa:IconBlock Icon="Edit" Foreground="#FFD966" Width="20" Height="20" FontSize="18"/>
                                        </Button>
                                        <!-- Delete Button -->
                                        <Button Command="{Binding DataContext.Delete_Item_Command, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                Margin="10 0 0 0"
                                                CommandParameter="{Binding}"
                                                ToolTip="Delete"
                                                Style="{StaticResource IconButtonStyle}">
                                            <fa:IconBlock Icon="Trash" Foreground="#FF6B6B" Width="20" Height="20" FontSize="18"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Miscellaneous Tab -->
            <TabItem Header="Miscellaneous">
                <!-- Data Table -->
                <DataGrid x:Name="MiscellaneousGrid"
                          ItemsSource="{Binding FilteredMiscellaneous}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Focusable="False"
                          SelectionMode="Extended">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding ItemName}" Width="*"/>
                        <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width=".4*"/>
                        <DataGridTextColumn Header="Unit" Binding="{Binding Unit}" Width=".4*"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width=".4*"/>
                        <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width=".4*"/>
                        <DataGridTextColumn Header="Expiry Date" Binding="{Binding ExpiryDate, StringFormat=d}" Width=".4*"/>
                        <!-- 👇 Action Buttons -->
                        <DataGridTemplateColumn Header="Actions" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <!-- Edit Button -->
                                        <Button Command="{Binding DataContext.Edit_Item_Command, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Edit"
                                                Style="{StaticResource IconButtonStyle}">
                                            <fa:IconBlock Icon="Edit" Foreground="#FFD966" Width="20" Height="20" FontSize="18"/>
                                        </Button>
                                        <!-- Delete Button -->
                                        <Button Command="{Binding DataContext.Delete_Item_Command, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                Margin="10 0 0 0"
                                                CommandParameter="{Binding}"
                                                ToolTip="Delete"
                                                Style="{StaticResource IconButtonStyle}">
                                            <fa:IconBlock Icon="Trash" Foreground="#FF6B6B" Width="20" Height="20" FontSize="18"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </DockPanel>
</UserControl>
