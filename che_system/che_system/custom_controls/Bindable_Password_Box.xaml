<UserControl x:Class="che_system.custom_controls.Bindable_Password_Box"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:che_system.custom_controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    
    
    <PasswordBox x:Name="password_text"
                 FontSize="25"
                 FontWeight="Medium"
                 Background="Transparent"
                 Foreground="{StaticResource BgLight}"
                 CaretBrush="{StaticResource Color1}"
                 BorderBrush="{StaticResource BgLight}"
                 Padding="0 5"
                 BorderThickness="0,0,0,1"
                 VerticalContentAlignment="Center">

    </PasswordBox>
</UserControl>
