<!-- Card_1_Clickable.xaml -->
<UserControl x:Class="che_system.custom_controls.Card_1_Clickable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d">
    <Grid Height="Auto" Width="Auto">
        <Border Style="{StaticResource CardStyle}"
                Margin="10"
                Cursor="Hand"
                Focusable="True"
                MouseLeftButtonUp="OnMouseLeftButtonUp"
                KeyDown="OnKeyDown">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".20*"/>
                    <ColumnDefinition Width=".85*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 10 0">
                        <TextBlock Text="{Binding Title}" Style="{StaticResource CardTitleStyle}"/>
                    </Grid>

                    <Grid Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 10 0">
                        <TextBlock Text="{Binding Value}" Style="{StaticResource CardValueStyle}"/>
                    </Grid>
                </Grid>

                <Grid Grid.Column="0">
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Border Background="{StaticResource BgTertiary}" Padding="30" CornerRadius="10" />
                        <fa:IconBlock Icon="{Binding Icon}" Style="{StaticResource CardIconStyle}"/>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>